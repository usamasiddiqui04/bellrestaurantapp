<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Screens.RetauranttypeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="20dp"
        android:background="#ffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:textSize="30sp"
            android:id="@+id/welcome"
            android:textColor="@color/colorPrimary"
            android:text="Select Restaurant Type"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/cont"
            app:layout_constraintTop_toBottomOf="@id/welcome"
            android:text="Online Registration form"
            android:layout_marginLeft="15dp">
        </TextView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:id="@+id/takeawaylayout"
            app:layout_constraintTop_toBottomOf="@id/cont"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/backgroundtext">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Takeout" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxNo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxYes"
                android:layout_marginEnd="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/checkboxNo"
                android:layout_marginRight="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                app:layout_constraintTop_toBottomOf="@id/checkboxYes"
                app:layout_constraintStart_toStartOf="@id/checkboxYes"
                app:layout_constraintEnd_toEndOf="@id/checkboxYes"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                app:layout_constraintTop_toBottomOf="@id/checkboxNo"
                app:layout_constraintStart_toStartOf="@id/checkboxNo"
                app:layout_constraintEnd_toEndOf="@id/checkboxNo"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:id="@+id/deliverlayout"
            app:layout_constraintTop_toBottomOf="@id/takeawaylayout"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/backgroundtext">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Delivery" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DelivercheckboxNo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DelivercheckboxYes"
                android:layout_marginEnd="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/DelivercheckboxNo"
                android:layout_marginRight="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                app:layout_constraintTop_toBottomOf="@id/DelivercheckboxYes"
                app:layout_constraintStart_toStartOf="@id/DelivercheckboxYes"
                app:layout_constraintEnd_toEndOf="@id/DelivercheckboxYes"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                app:layout_constraintTop_toBottomOf="@id/DelivercheckboxNo"
                app:layout_constraintStart_toStartOf="@id/DelivercheckboxNo"
                app:layout_constraintEnd_toEndOf="@id/DelivercheckboxNo"/>
        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:id="@+id/dinninglayout"
            app:layout_constraintTop_toBottomOf="@id/deliverlayout"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/backgroundtext">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Dinning" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dinningcheckboxNo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dinningcheckboxYes"
                android:layout_marginEnd="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/dinningcheckboxNo"
                android:layout_marginRight="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                app:layout_constraintTop_toBottomOf="@id/dinningcheckboxYes"
                app:layout_constraintStart_toStartOf="@id/dinningcheckboxYes"
                app:layout_constraintEnd_toEndOf="@id/dinningcheckboxYes"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                app:layout_constraintTop_toBottomOf="@id/dinningcheckboxNo"
                app:layout_constraintStart_toStartOf="@id/dinningcheckboxNo"
                app:layout_constraintEnd_toEndOf="@id/dinningcheckboxNo"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/MyTextInputLayout"
            app:layout_constraintTop_toBottomOf="@id/dinninglayout"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/darker_gray"
            android:layout_margin="15dp"
            android:id="@+id/deliveryfee"
            app:helperText="In rupees"
            android:textColorHint="@android:color/darker_gray"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawablePadding="15dp"
                android:textColorHint="@android:color/darker_gray"
                android:background="@android:color/white"
                android:hint="Delivery fee"
                android:maxLines="1"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/MyTextInputLayout"
            app:layout_constraintTop_toBottomOf="@id/deliveryfee"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/darker_gray"
            android:layout_margin="15dp"
            android:id="@+id/deliveryminimumfee"
            app:helperText="In rupees"
            android:textColorHint="@android:color/darker_gray"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawablePadding="15dp"
                android:textColorHint="@android:color/darker_gray"
                android:background="@android:color/white"
                android:hint="Minimum Delivery Amount"
                android:maxLines="1"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/MyTextInputLayout"
            app:layout_constraintTop_toBottomOf="@id/deliveryminimumfee"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/darker_gray"
            android:layout_margin="15dp"
            android:id="@+id/orderleadtime"
            app:helperText="How long should we tell the customer that it will take to prepare their order? (In minutes.)"
            android:textColorHint="@android:color/darker_gray"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawablePadding="15dp"
                android:textColorHint="@android:color/darker_gray"
                android:background="@android:color/white"
                android:hint="Order lead time"
                android:maxLines="1"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/MyTextInputLayout"
            app:layout_constraintTop_toBottomOf="@id/orderleadtime"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/darker_gray"
            android:layout_margin="15dp"
            android:id="@+id/DeliveryExtraTime"
            app:helperText="For delivery orders, how much extra time should we add to the takeout lead time?"
            android:textColorHint="@android:color/darker_gray"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawablePadding="15dp"
                android:textColorHint="@android:color/darker_gray"
                android:background="@android:color/white"
                android:hint="Delivery extra time"
                android:maxLines="1"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_navigate_next_24"
            android:layout_marginTop="25dp"
            android:text="Continue"
            android:textSize="18sp"
            android:id="@+id/next"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/DeliveryExtraTime"
            android:background="@drawable/button_rounded"
            android:layout_marginStart="15dp"
            android:layout_gravity="end|bottom"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>