<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/logo"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:textSize="30sp"
            android:id="@+id/welcome"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="Welcome"
            android:layout_marginLeft="25dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:layout_marginStart="25dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/cont"
            app:layout_constraintTop_toBottomOf="@id/welcome"
            android:text="Sign up to continue"
            android:layout_marginLeft="25dp">
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="25dp"
            android:id="@+id/layoutone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cont">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/MyTextInputLayout"
                android:textColorHint="@android:color/darker_gray"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:drawablePadding="15dp"
                    android:id="@+id/ownername"
                    android:textColor="@android:color/darker_gray"
                    android:drawableEnd="@drawable/ic_outline_person_outline_24"
                    android:background="@android:color/white"
                    android:hint="User name"
                    android:maxLines="1"
                    android:inputType="textEmailAddress"
                    android:drawableRight="@drawable/ic_outline_person_outline_24" />
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/layoutthree"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/MyTextInputLayout"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawablePadding="15dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:drawableEnd="@drawable/ic_outline_email_24"
                    android:background="@android:color/white"
                    android:hint="Email"
                    android:id="@+id/email"
                    android:maxLines="1"
                    android:inputType="textEmailAddress"
                    android:drawableRight="@drawable/ic_outline_email_24" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/layoutfour"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutthree">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/MyTextInputLayout"
                android:textColorHint="@android:color/darker_gray"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawablePadding="15dp"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@android:color/darker_gray"
                    android:drawableEnd="@drawable/ic_outline_lock_24"
                    android:background="@android:color/white"
                    android:hint="Password"
                    android:maxLines="1"
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:drawableRight="@drawable/ic_outline_lock_24" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/layoutfive"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutfour">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/MyTextInputLayout"
                android:textColorHint="@android:color/darker_gray"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawablePadding="15dp"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@android:color/darker_gray"
                    android:drawableEnd="@drawable/ic_outline_lock_24"
                    android:background="@android:color/white"
                    android:hint="Confirm password"
                    android:maxLines="1"
                    android:id="@+id/confrimpassword"
                    android:inputType="numberPassword"
                    android:drawableRight="@drawable/ic_outline_lock_24" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/button_rounded"
            android:layout_marginTop="20dp"
            android:text="Registered"
            android:id="@+id/buttonregister"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            app:layout_constraintTop_toBottomOf="@id/layoutfive"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/buttonregister"
            app:layout_constraintStart_toStartOf="@id/buttonregister"
            app:layout_constraintEnd_toEndOf="@id/buttonregister"
            android:text="Already have an account?"
            android:id="@+id/dontaccount"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/dontaccount"
            app:layout_constraintStart_toStartOf="@id/dontaccount"
            app:layout_constraintEnd_toEndOf="@id/dontaccount"
            android:text="Login here"
            android:textColor="@color/colorPrimary"
            android:id="@+id/txt_login"
            android:layout_marginTop="5dp">

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>