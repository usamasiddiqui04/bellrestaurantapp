<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.BidOnClickActivity">

    <ImageView
        android:id="@+id/bidImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_add_a_photo_24"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/bidStatus"
        android:typeface="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bidImage"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/checkStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="serif"
        app:layout_constraintStart_toEndOf="@id/bidStatus"
        app:layout_constraintTop_toBottomOf="@id/bidImage"
        android:text="OPEN"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/bidTitle"
        android:typeface="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bidStatus"
        android:text="BMW 5 series"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bidTitle"
        app:layout_constraintBottom_toBottomOf="@id/bidTitle">

        <TextView
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:text="Time remaining"/>

        <TextView
            android:id="@+id/bidDuration"
            android:layout_width="150dp"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="18sp"
            android:text="Duration"/>
    </LinearLayout>

    <View
        android:id="@+id/viewOne"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/grey"
        android:layout_margin="20dp"/>


    <ImageView
        android:id="@+id/addToFavourite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewOne"
        app:layout_constraintBottom_toBottomOf="@id/viewOne"
        android:src="@drawable/ic_baseline_favorite_pink_24"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/bidDescription"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/addToFavourite"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:lineSpacingMultiplier="1.5"
        android:text="Refined design. Outstanding power unit. Fascinating Driving Dynamics. The BMW M760Li xDrive sets unprecedented standards in every discipline. It uncompromisingly fuses the best of the BMW 7 series with the high-octane genes of BMW M, and unites fully trained athleticism with absolute luxury. The BMW M TwinPower Turbo 12-cylinder petrol engine is the only V-12 at BMW – it confidently flaunts engine-building expertise at its finest. Welcome to the winner’s enclosure."/>


    <View
        android:id="@+id/viewTwo"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/bidDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/grey"
        android:layout_margin="20dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewTwo"
        android:text="Set the mood for your evening. The available Panoramic Sky Lounge is the perfect complement to the Ambient Lighting, which creates a captivating experience for you and your passengers."
        android:lineSpacingMultiplier="1.5"
        android:layout_margin="20dp"/>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/minBid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min\nBid"
                android:textStyle="bold"
                android:typeface="serif"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:id="@+id/bidMinAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/minBid"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Rs 15 Lakh"
                android:typeface="serif"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Start Bid"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:padding="10dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>










</androidx.constraintlayout.widget.ConstraintLayout>