<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="#ffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:textSize="30sp"
            android:id="@+id/welcome"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="Add product"
            android:layout_marginLeft="15dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/cont"
            app:layout_constraintTop_toBottomOf="@id/welcome"
            android:text="Fill product detail"
            android:layout_marginLeft="15dp">
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/layoutone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cont">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/MyTextInputLayout"
                app:helperText="Mandatory"
                android:textColorHint="@android:color/darker_gray"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawablePadding="15dp"
                    android:textColor="@android:color/darker_gray"
                    android:background="@android:color/white"
                    android:hint="Category"
                    android:maxLines="1"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/layouttwo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/MyTextInputLayout"
                app:helperText="Mandatory"
                android:textColorHint="@android:color/darker_gray"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawablePadding="15dp"
                    android:textColor="@android:color/darker_gray"
                    android:background="@android:color/white"
                    android:hint="Product name"
                    android:maxLines="1"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/layoutthree"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layouttwo">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/MyTextInputLayout"
                app:helperText="Mandatory"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="top|start"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@android:color/white"
                    android:hint="Product description" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/layoutfour"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutthree">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/MyTextInputLayout"
                app:helperText="Mandatory"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawablePadding="15dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@android:color/white"
                    android:hint="Product code"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/layoutfive"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutfour">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/MyTextInputLayout"
                app:helperText="In rupees (Mandatory)"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawablePadding="15dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@android:color/white"
                    android:hint="Product price"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:id="@+id/picupload"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/layoutfive"
            android:text="Upload product image"
            android:layout_marginLeft="15dp">
        </TextView>

        <ImageView
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.9"
            android:layout_height="250dp"
            android:padding="50dp"
            android:id="@+id/imageone"
            android:layout_margin="10dp"
            android:background="@drawable/backgroundtext"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            app:layout_constraintTop_toBottomOf="@id/picupload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add image"
            app:layout_constraintBottom_toBottomOf="@id/imageone"
            app:layout_constraintStart_toStartOf="@id/imageone"
            app:layout_constraintEnd_toEndOf="@id/imageone"
            android:layout_margin="15dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/imageone"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_baseline_navigate_next_24"
            android:layout_marginTop="25dp"
            android:text="Upload product"
            android:textSize="18sp"
            android:id="@+id/next"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:layout_marginEnd="15dp"
            android:background="@drawable/button_rounded"
            android:layout_marginStart="15dp"
            android:layout_gravity="end|bottom"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>